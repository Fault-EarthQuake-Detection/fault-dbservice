// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL") // Ini untuk aplikasi (pakai pooler)
  shadowDatabaseUrl = env("DATABASE_URL_NON_POOLING") // Ini khusus untuk migrasi
}

enum Role {
  USER
  ADMIN
}

// Model User tetap sama
model User {
  id        String   @id @default(uuid())
  email     String   @unique // <-- WAJIB ADA, untuk Supabase Auth
  username  String   @unique
  password  String   // <-- WAJIB ADA, untuk hash bcrypt
  role      Role     @default(USER)
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")

  reports   DetectionReport[]
  feedbacks Feedback[]

  @@map("users")
}

// Model UTAMA: Menggabungkan semua data relevan
// ... (bagian atas sama) ...

// Model UTAMA: Menggabungkan semua data relevan
model DetectionReport {
  id Int @id @default(autoincrement())

  // Data Lokasi
  latitude  Float
  longitude Float
  address   String? 

  // --- UPDATE: PISAHKAN URL GAMBAR ---
  originalImageUrl String  @map("original_image_url") // Foto asli dari upload user
  overlayImageUrl  String  @map("overlay_image_url")  // Hasil deteksi (warna merah + background)
  maskImageUrl     String  @map("mask_image_url")     // Hasil hitam-putih (opsional, tapi bagus disimpan)
  
  // --- UPDATE: DATA HASIL DETEKSI LEBIH DETAIL ---
  statusLevel     String  @map("status_level")      // Contoh: "PERINGATAN", "WASPADA", "AMAN"
  faultType       String? @map("fault_type")        // Contoh: "Pola Tegak", "Pola Mendatar"
  description     String? @db.Text                  // Penjelasan lengkap paragraf
  
  createdAt DateTime @default(now()) @map("created_at")

  // Relasi
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  isValidated Boolean   @default(false) @map("is_validated") // Default belum valid
  validatedAt DateTime? @map("validated_at")
  validatedBy String?   @map("validated_by") // ID Admin yang memvalidasi

  @@map("detection_reports")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  @@map("feedbacks")
}